<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card my-5">
        <form class="card-body cardbody-color p-lg-5" id="signup-form">
          <div class="text-center">
            <h2 class="title pb-4" style="color:black">Sign Up</h2>
          </div>
          <div class="mb-3">
            <input type="text" style="font-family:'Montserrat'" class="form-control" id="username-signup" placeholder="username">
          </div>
          <div class="mb-3">
            <input type="text" style="font-family:'Montserrat'" class="form-control" id="email-signup" placeholder="email">
          </div>
          <div class="mb-3">
            <input type="password" style="font-family:'Montserrat'" class="form-control" id="password-signup" placeholder="password">
          </div>
          <div class="text-center">
            <button type="submit" style="font-family:'Montserrat'" class="btn btn-color px-5 mb-5 w-100">Create Account</button>
          </div>
          <div id="emailHelp" style="font-family:'Montserrat'" class="form-text text-center mb-5">Already have an account? <a href="/login"
              class="fw-bold"> Login</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>