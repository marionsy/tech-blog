<section class="single-post-container">
  {{> post-info post}}

  {{> comment post.comments}}

  {{#if logged_in}}
  <div class="container">
    <div class="row justify-content-center mt-3">
      <div class="col-7">
        <div class="card">
          <form class="card-body cardbody-color p-lg-5" id="comment-form">
            <div class="mb-3">
              <label class="form-label" style="font-family: 'Lato'">Comment</label>
              <input id="new-comment" name="comment-body" class="form-input form-control"
                style="font-family:'Montserrat'">
            </div>
            <div class="text-center">
              <button type="submit" class="btn text-primary" style="font-family: 'Lato'">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>


  {{/if}}

</section>

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}