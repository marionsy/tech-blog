<h2 class="card-header">Edit Post</h2>
    <form class="card-body" id="edit-post">
        <div class="form-row">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" id="post-title" post-id={{post.id}} value="{{post.title}}" class="form-input form-control"/>
        </div>

        <div class="form-row">
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" id="content" value="{{post.post_body}}" class="form-input form-control"/>
        </div>
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post-btn btn">Delete Post</button>
    </form>



<script src="/js/editPost.js"></script>

<script src="/js/deletePost.js"></script>