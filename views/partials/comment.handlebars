<div class="container-fluid">
  <div class="comments">
    {{#each this}}
    <div class="card post comment-box">
      <div class="card-body post-body">
        <div class="card-text comment-text" id="comment">
          {{comment_body}}
        </div>
        <div class="comment-author">
          - {{user.username}}, {{format_date date_created}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>